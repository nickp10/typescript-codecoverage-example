    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Build and Debug",
            "program": "${workspaceFolder}\\debug\\cli.js",
            "preLaunchTask": "npm: build-debug",
            "outFiles": [
                "${workspaceFolder}/debug/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Only",
            "program": "${workspaceFolder}\\debug\\cli.js",
            "outFiles": [
                "${workspaceFolder}/debug/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceFolder}\\node_modules\\mocha\\bin\\_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}\\src\\**\\*.spec.ts"
            ]
        }
    ]
}